@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row" style="font:bold; font-size:small">
        <div class="col-md-6">
            <img src="~/Images/home_mack_capital4.jpg" alt="Exchange" width="500" />
        </div>

        <div class="col-md-6" style="font-family:Arial; font-size:medium">
            <form class="form-horizontal">
                <div class="form-group">
                    <label for="Username" class="col-sm-2 control-label">Username</label>
                    <div class="col-sm-10">
                        @Html.EditorFor(a => a.employeeNo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(a => a.employeeNo, "", new { @class = "text-danger" })
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <label for="inputPassword" class="col-sm-2 control-label">Password</label>
                    <div class="col-sm-10">
                        @Html.EditorFor(a => a.password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(a => a.password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox"> Remember me
                            </label>
                        </div>

                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        @*<input type="submit" name="button" value="Login" class="btn btn-primary" style="background-color:#010431;"width="30" onclick="@("window.location.href='" + Url.Action("Index","CompanyName_tbl" )+"'")"/>*@
                        <button class="btn btn-primary" type="button" id="log" style="background-color:#010431; width:100px;" onclick="location.href='@Url.Action("Index","CompanyName_tbl")'">Login</button>
                        <a href="#" onclick="@("window.location.href='" + Url.Action("ForgotPassword","Home" )+"'")">Forgot your password?</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>





